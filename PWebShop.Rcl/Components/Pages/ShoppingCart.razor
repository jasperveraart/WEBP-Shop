@page "/cart"
@using PWebShop.Rcl.Services
@inject CartService CartService
@layout PWebShop.Rcl.Components.Layout.MainLayout

<h2>Your Cart</h2>

@if (CartService.Items.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in CartService.Items)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>
                    <input type="number"
                           class="form-control"
                           min="1"
                           @bind="item.Quantity"
                           @bind:event="oninput"
                           @onchange="() => CartService.Update()" />
                </td>
                <td>$@item.Product.FinalPrice</td>
                <td>$@(item.Product.FinalPrice * item.Quantity)</td>
                <td>
                    <button class="btn btn-danger"
                            @onclick="() => CartService.Remove(item.Product)">
                        Remove
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <h4 class="mt-3">
        Total: $@CartService.Items.Sum(i => i.Product.FinalPrice * i.Quantity)
    </h4>

    <button class="btn btn-primary mt-3" @onclick="GoToCheckout">Proceed to Checkout</button>
}

@code {
    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }
    
    [Inject] private NavigationManager Nav { get; set; }

    private void GoToCheckout()
    {
        Nav.NavigateTo("/checkout");
    }

}