@page "/cart"
@using PWebShop.Rcl.Services
@using PWebShop.Rcl.Dtos
@using Microsoft.AspNetCore.Components.Authorization
@using PWebShop.Domain.Entities
@inject CartService CartService
@inject IOrderService OrderService
@inject IAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@implements IDisposable

<div class="container py-5">
    <h2 class="fw-bold mb-4">Your Cart</h2>

    @if (CartService.Items.Count == 0)
    {
        <div class="alert alert-info">
            Your cart is empty. <a href="/" class="alert-link">Continue shopping</a>.
        </div>
    }
    else
    {
        <div class="row">
            <!-- Left Column: Items, Address, Payment -->
            <div class="col-lg-8">
                <!-- Cart Items -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-0">
                        @foreach (var item in CartService.Items)
                        {
                            <div class="d-flex align-items-center p-3 border-bottom">
                                <img src="@GetProductImageUrl(item.Product)" 
                                     alt="@item.Product.Name" 
                                     class="rounded me-3" 
                                     style="width: 80px; height: 80px; object-fit: contain; background-color: #f8f9fa;">
                                
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-1">@item.Product.Name</h6>
                                    <div class="text-muted small">Price: €@item.Product.FinalPrice.ToString("F2")</div>
                                </div>

                                <div class="d-flex align-items-center gap-2">
                                    <button class="btn btn-sm btn-light rounded-circle" 
                                            @onclick="() => UpdateQuantity(item, -1)"
                                            disabled="@(item.Quantity <= 1)">-</button>
                                    <span class="fw-bold" style="min-width: 20px; text-align: center;">@item.Quantity</span>
                                    <button class="btn btn-sm btn-light rounded-circle" 
                                            @onclick="() => UpdateQuantity(item, 1)">+</button>
                                </div>

                                <button class="btn btn-link text-danger ms-3" @onclick="() => CartService.Remove(item.Product)">
                                    <span class="material-icons">delete</span>
                                </button>
                            </div>
                        }
                    </div>
                </div>

                <!-- Delivery Address -->
                <div class="mb-4">
                    <h4 class="fw-bold mb-3">Where should we deliver?</h4>
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            @if (IsAuthenticated)
                            {
                                @if (CurrentUser != null)
                                {
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Name</label>
                                        <div class="form-control-plaintext fw-bold">@CurrentUser.DisplayName</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Address</label>
                                        <div class="form-control-plaintext fw-bold">
                                            @(string.IsNullOrEmpty(CurrentUser.DefaultShippingAddress) ? "No address set in profile." : CurrentUser.DefaultShippingAddress)
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Email</label>
                                        <div class="form-control-plaintext">@CurrentUser.Email</div>
                                    </div>
                                    <div class="text-end">
                                        <a href="/profile" class="btn btn-outline-primary btn-sm">Edit Details</a>
                                    </div>
                                }
                                else if (!string.IsNullOrEmpty(ProfileErrorMessage))
                                {
                                    <div class="alert alert-danger">
                                        Failed to load profile: @ProfileErrorMessage
                                        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="CheckAuthStatus">Retry</button>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-3">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="mt-2 text-muted">Loading profile details...</p>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-warning mb-3">
                                    Log in to use your address details.
                                </div>
                                
                                <EditForm Model="LoginModel" OnValidSubmit="HandleLogin">
                                    <DataAnnotationsValidator />
                                    @if (!string.IsNullOrEmpty(LoginErrorMessage))
                                    {
                                        <div class="alert alert-danger">@LoginErrorMessage</div>
                                    }
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label">Email</label>
                                            <InputText @bind-Value="LoginModel.Email" class="form-control" placeholder="name@example.com" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Password</label>
                                            <InputText @bind-Value="LoginModel.Password" type="password" class="form-control" placeholder="Password" />
                                        </div>
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary w-100">Login</button>
                                        </div>
                                    </div>
                                </EditForm>
                            }
                        </div>
                    </div>
                </div>

                <!-- Payment Methods -->
                <div class="mb-4">
                    <h4 class="fw-bold mb-3">How do you want to pay?</h4>
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                <label class="list-group-item d-flex align-items-center p-3 cursor-pointer">
                                    <input class="form-check-input me-3" type="radio" name="paymentMethod" checked>
                                    <span class="fw-bold">Credit Card</span>
                                </label>
                                <label class="list-group-item d-flex align-items-center p-3 cursor-pointer">
                                    <input class="form-check-input me-3" type="radio" name="paymentMethod">
                                    <span class="fw-bold">PayPal</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Summary -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Order Summary</h5>
                        
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span>€@SubTotal.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Shipping</span>
                            <span>€@ShippingCost.ToString("F2")</span>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fw-bold fs-5">Total</span>
                            <span class="fw-bold fs-5">€@Total.ToString("F2")</span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small text-muted">Discount Code</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter code">
                                <button class="btn btn-secondary" type="button">Apply</button>
                            </div>
                        </div>

                        <button class="btn btn-primary w-100 py-2 fw-bold" @onclick="PlaceOrder" disabled="@(!IsAuthenticated)">
                            <span class="material-icons align-middle me-1 fs-5">lock</span>
                            Place Order
                        </button>
                        
                        @if (!IsAuthenticated)
                        {
                            <div class="text-center mt-2 small text-muted">
                                Log in to place order
                            </div>
                        }

                        <div class="d-flex justify-content-center gap-2 mt-4">
                            <img src="https://cdn-icons-png.flaticon.com/512/196/196578.png" height="24" alt="Mastercard" />
                            <img src="https://cdn-icons-png.flaticon.com/512/196/196565.png" height="24" alt="PayPal" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool IsAuthenticated;
    private CurrentUserResponseDto? CurrentUser;
    private LoginRequestDto LoginModel = new();
    private string? LoginErrorMessage;
    private string? ProfileErrorMessage;
    
    private decimal SubTotal => (decimal)CartService.Items.Sum(i => i.Product.FinalPrice * i.Quantity);
    private decimal ShippingCost => 5.00m;
    private decimal Total => SubTotal + ShippingCost;

    protected override async Task OnInitializedAsync()
    {
        CartService.OnChange += StateHasChanged;
        await CheckAuthStatus();
    }

    private async Task CheckAuthStatus()
    {
        try
        {
            ProfileErrorMessage = null;
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            IsAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;

            if (IsAuthenticated)
            {
                CurrentUser = await AuthService.GetCurrentUser();
                if (CurrentUser == null)
                {
                    ProfileErrorMessage = "Could not retrieve user details.";
                }
            }
        }
        catch (Exception ex)
        {
            ProfileErrorMessage = $"Error loading profile: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            StateHasChanged();
        }
    }

    private async Task HandleLogin()
    {
        LoginErrorMessage = null;
        var result = await AuthService.Login(LoginModel);

        if (result.Success)
        {
            await CheckAuthStatus();
            // Force re-render to show address
            StateHasChanged();
        }
        else
        {
            LoginErrorMessage = result.Message;
        }
    }

    private void UpdateQuantity(CartItem item, int change)
    {
        item.Quantity += change;
        if (item.Quantity < 1) item.Quantity = 1;
        CartService.Update();
    }

    private async Task PlaceOrder()
    {
        if (!IsAuthenticated || CurrentUser == null) return;

        var createDto = new OrderCreateDto
        {
            ShippingAddress = !string.IsNullOrEmpty(CurrentUser.DefaultShippingAddress) 
                ? CurrentUser.DefaultShippingAddress 
                : "No Address Provided", // Fallback or handle error
            Items = CartService.Items.Select(i => new OrderCreateItemDto
            {
                ProductId = i.Product.Id,
                Quantity = i.Quantity
            }).ToList()
        };

        var order = await OrderService.CreateOrder(createDto);
        if (order != null)
        {
            CartService.ClearCart();
            Nav.NavigateTo($"/checkout/{order.Id}");
        }
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }
    
    private string GetProductImageUrl(Product product)
    {
        var mainImage = product.Images?.FirstOrDefault(i => i.IsMain) ?? product.Images?.FirstOrDefault();
        return GetImageUrl(mainImage?.Url);
    }

    private string GetImageUrl(string? url)
    {
        if (string.IsNullOrEmpty(url)) return "https://via.placeholder.com/150";
        if (url.StartsWith("http")) return url;
        return $"http://localhost:5091/{url}";
    }
}