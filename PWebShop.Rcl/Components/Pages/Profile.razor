@page "/profile"

<div class="container py-5">

    <!-- Title -->
    <div class="mb-4">
        <h2 class="fw-bold">Your Profile</h2>
        <p class="text-muted">View and manage your account details</p>
    </div>

    <div class="row g-4">

        <!-- USER CARD -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">

                    <!-- Avatar -->
                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center mx-auto"
                         style="width:100px; height:100px; font-size:32px;">
                        UN
                    </div>

                    <h4 class="mt-3 mb-1">User Name</h4>
                    <p class="text-muted mb-2">user@example.com</p>

                    <button class="btn btn-primary w-100 mt-2">Edit Profile</button>

                    <a href="/logout" class="btn btn-outline-danger w-100 mt-2">Logout</a>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN -->
        <div class="col-lg-8">

            <!-- Shipping Address -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Shipping Address</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1 fw-semibold">John Doe</p>
                    <p class="mb-1">123 Main St</p>
                    <p class="mb-1">New York, NY 10001</p>
                    <p class="mb-3">USA</p>

                    <button class="btn btn-outline-primary btn-sm">Edit Address</button>
                </div>
            </div>

            <!-- Payment Methods -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white d-flex justify-content-between">
                    <h5 class="mb-0">Payment Methods</h5>
                    <button class="btn btn-sm btn-primary">Add</button>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-2">
                        <div>
                            <strong>Visa **** 1234</strong>
                            <div class="text-muted small">Expires 08/27</div>
                        </div>
                        <button class="btn btn-outline-danger btn-sm">Remove</button>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <strong>PayPal</strong>
                            <div class="text-muted small">user@example.com</div>
                        </div>
                        <button class="btn btn-outline-danger btn-sm">Remove</button>
                    </div>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Recent Orders</h5>
                </div>
                <div class="card-body">

                    <div class="border-bottom pb-2 mb-3">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>Order #10045</strong>
                                <div class="text-muted small">Placed on Jan 11, 2025</div>
                            </div>
                            <button class="btn btn-sm btn-outline-primary"
                                    @onclick="() => GoToOrder(10045)">
                                View Details
                            </button>
                        </div>
                    </div>

                    <div class="border-bottom pb-2 mb-3">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>Order #10044</strong>
                                <div class="text-muted small">Placed on Jan 8, 2025</div>
                            </div>
                            <button class="btn btn-sm btn-outline-primary"
                                    @onclick="() => GoToOrder(10044)">
                                View Details
                            </button>
                        </div>
                    </div>

                    <div>
                        <button class="btn btn-primary w-100" @onclick="GoToOrders">View All Orders</button>
                    </div>

                </div>
            </div>

        </div>

    </div>

</div>

@code {
    [Inject] NavigationManager Nav { get; set; }

    void GoToOrder(int id)
    {
        Nav.NavigateTo($"/orders/{id}");
    }

    void GoToOrders()
    {
        Nav.NavigateTo("/orders");
    }
}
