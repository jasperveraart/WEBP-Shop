@page "/"
@inject CartService CartService
@layout PWebShop.Rcl.Components.Layout.MainLayout
@using PWebShop.Domain.Entities
@using Microsoft.AspNetCore.Components.Forms
@using PWebShop.Rcl.Services
@using PWebShop.Rcl.Dtos
@using System.Net.Http.Json
@inject ICategoryService CategoryService
@inject HttpClient Http
@inject NavigationManager Nav

<div class="container py-5">
    <div class="row">
        
        <!-- SIDEBAR FILTERS (Left Column) -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-4">Filters</h5>

                    <!-- Categories -->
                    <div class="mb-4">

                        <h6 class="fw-bold mb-3">Product Categories</h6>
                        <div class="d-flex flex-column gap-1">
                            <div class="d-flex align-items-center gap-2 p-1 rounded @(SelectedCategoryId == null ? "bg-light fw-bold" : "")" 
                                 style="cursor: pointer;"
                                 @onclick="@(() => SelectCategory(null))">
                                <span>All Categories</span>
                            </div>
                            
                            @foreach (var category in Categories)
                            {
                                var isExpanded = ExpandedCategories.Contains(category.Id);
                                var isSelected = SelectedCategoryId == category.Id;
                                var hasChildren = category.Children != null && category.Children.Any();

                                <div class="d-flex flex-column">
                                    <div class="d-flex align-items-center justify-content-between p-1 rounded @(isSelected ? "bg-light fw-bold" : "")">
                                        <div class="d-flex align-items-center gap-2 flex-grow-1" 
                                             style="cursor: pointer;"
                                             @onclick="@(() => SelectCategory(category.Id))">
                                            <span>@category.DisplayName</span>
                                        </div>
                                        @if (hasChildren)
                                        {
                                            <span class="material-icons text-muted" 
                                                  style="font-size: 1.2rem; cursor: pointer;"
                                                  @onclick="@(() => ToggleCategory(category.Id))">
                                                @(isExpanded ? "expand_less" : "expand_more")
                                            </span>
                                        }
                                    </div>

                                    @if (hasChildren && isExpanded)
                                    {
                                        <div class="ms-4 d-flex flex-column gap-1 mt-1 border-start ps-2">
                                            @foreach (var child in category.Children)
                                            {
                                                var isChildSelected = SelectedCategoryId == child.Id;
                                                <div class="d-flex align-items-center gap-2 p-1 rounded @(isChildSelected ? "bg-light fw-bold" : "")"
                                                     style="cursor: pointer;"
                                                     @onclick="@(() => SelectCategory(child.Id))">
                                                    <span class="small">@child.DisplayName</span>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Price Range -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Price Range</h6>
                        <div class="d-flex align-items-center gap-2">
                            <input type="number" class="form-control form-control-sm" placeholder="Min" @bind="MinPrice">
                            <span>-</span>
                            <input type="number" class="form-control form-control-sm" placeholder="Max" @bind="MaxPrice">
                        </div>
                    </div>

                    <button class="btn btn-primary w-100 mb-2" @onclick="ApplyFilters">Apply Filters</button>
                    <button class="btn btn-light w-100 text-muted" @onclick="ResetFilters">Reset</button>

                </div>
            </div>
        </div>

        <!-- PRODUCT GRID (Right Column) -->
        <div class="col-lg-9">
            
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold m-0">All Products</h3>
                <div class="d-flex align-items-center gap-2">
                    <span class="text-muted">Sort by:</span>
                    <select class="form-select form-select-sm w-auto" @bind="SortOption">
                        <option value="Popularity">Popularity</option>
                        <option value="PriceAsc">Price: Low to High</option>
                        <option value="PriceDesc">Price: High to Low</option>
                        <option value="Newest">Newest</option>
                    </select>
                </div>
            </div>

            @if (IsLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!PagedProducts.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted">No products found.</p>
                </div>
            }
            else
            {
                <!-- Grid -->
                <div class="row g-4">
                    @foreach (var product in PagedProducts)
                    {
                        <div class="col-md-6 col-lg-4">
                            <a href="/product/@product.Id" class="text-decoration-none text-dark">
                                <div class="card h-100 border-0 shadow-sm hover-lift">
                                    <div class="position-relative" style="height: 250px; overflow: hidden; background-color: #f8f9fa;">
                                        <img src="@GetImageUrl(product.MainImageUrl)" 
                                             class="card-img-top w-100 h-100" 
                                             style="object-fit: contain; padding: 1rem;" 
                                             alt="@product.Name">
                                    </div>
                                    <div class="card-body">
                                        <h6 class="card-title fw-bold mb-1">@product.Name</h6>
                                        <p class="text-muted small mb-2">@product.CategoryName</p>
                                        <h5 class="fw-bold mb-0">â‚¬@product.CurrentPrice.ToString("F2")</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (TotalPages > 1)
                {
                    <div class="d-flex justify-content-center mt-4">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <li class="page-item @(Page == 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(Page - 1)">Previous</button>
                                </li>
                                @for (int i = 1; i <= TotalPages; i++)
                                {
                                    var pageIndex = i;
                                    <li class="page-item @(Page == pageIndex ? "active" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(pageIndex)">@pageIndex</button>
                                    </li>
                                }
                                <li class="page-item @(Page == TotalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(Page + 1)">Next</button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }

        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>

@code {
    private List<ProductSummaryDto> AllProducts = new();
    private List<CategoryTreeDto> Categories = new();
    private bool IsLoading = true;

    [SupplyParameterFromQuery]
    public string? Search { get; set; }

    /* ===============================
       STATE & FILTERS
    ================================= */

    private string SearchTerm { get; set; } = "";
    private int? SelectedCategoryId { get; set; }
    private double? MinPrice { get; set; }
    private double? MaxPrice { get; set; }
    private string SortOption { get; set; } = "Popularity";
    private HashSet<int> ExpandedCategories = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            IsLoading = true;
            // Fetch categories and products in parallel
            var categoriesTask = CategoryService.GetCategoryTreeAsync();
            var productsTask = Http.GetFromJsonAsync<List<ProductSummaryDto>>("api/products");

            await Task.WhenAll(categoriesTask, productsTask);

            Categories = await categoriesTask;
            AllProducts = await productsTask ?? new List<ProductSummaryDto>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    protected override void OnParametersSet()
    {
        if (Search != SearchTerm)
        {
            SearchTerm = Search ?? "";
            Page = 1;
        }
    }

    private void SelectCategory(int? categoryId)
    {
        SelectedCategoryId = categoryId;
        Page = 1;
    }

    private void ToggleCategory(int categoryId)
    {
        if (ExpandedCategories.Contains(categoryId))
        {
            ExpandedCategories.Remove(categoryId);
        }
        else
        {
            ExpandedCategories.Add(categoryId);
        }
    }

    private void ApplyFilters()
    {
        Page = 1;
        StateHasChanged();
    }

    private void ResetFilters()
    {
        SearchTerm = "";
        Search = null;
        Nav.NavigateTo("/", replace: true); // Clear URL query
        SelectedCategoryId = null;
        MinPrice = null;
        MaxPrice = null;
        SortOption = "Popularity";
        Page = 1;
    }

    /* ===============================
       FILTERED PRODUCTS
    ================================= */

    private IEnumerable<ProductSummaryDto> FilteredProducts
    {
        get
        {
            var query = AllProducts.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                query = query.Where(p => p.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
            }

            if (SelectedCategoryId.HasValue)
            {
                var allowedCategoryIds = GetDescendantCategoryIds(SelectedCategoryId.Value);
                query = query.Where(p => allowedCategoryIds.Contains(p.CategoryId));
            }

            if (MinPrice.HasValue)
            {
                query = query.Where(p => p.CurrentPrice >= MinPrice.Value);
            }

            if (MaxPrice.HasValue)
            {
                query = query.Where(p => p.CurrentPrice <= MaxPrice.Value);
            }

            // Sorting
            query = SortOption switch
            {
                "PriceAsc" => query.OrderBy(p => p.CurrentPrice),
                "PriceDesc" => query.OrderByDescending(p => p.CurrentPrice),
                "Newest" => query.OrderByDescending(p => p.Id),
                _ => query
            };

            return query;
        }
    }

    private HashSet<int> GetDescendantCategoryIds(int parentId)
    {
        var ids = new HashSet<int> { parentId };
        var category = FindCategory(Categories, parentId);
        if (category != null)
        {
            AddChildrenIds(category, ids);
        }
        return ids;
    }

    private CategoryTreeDto? FindCategory(List<CategoryTreeDto> categories, int id)
    {
        foreach (var cat in categories)
        {
            if (cat.Id == id) return cat;
            var found = FindCategory(cat.Children, id);
            if (found != null) return found;
        }
        return null;
    }

    private void AddChildrenIds(CategoryTreeDto category, HashSet<int> ids)
    {
        foreach (var child in category.Children)
        {
            ids.Add(child.Id);
            AddChildrenIds(child, ids);
        }
    }

    private string GetImageUrl(string? url)
    {
        if (string.IsNullOrEmpty(url)) return "https://via.placeholder.com/300x300?text=No+Image";
        if (url.StartsWith("http")) return url;
        
        // Ensure we point to the API
        return $"http://localhost:5091{url}";
    }

    /* ===============================
       PAGINATION
    ================================= */

    private int Page { get; set; } = 1;
    private int PageSize { get; set; } = 12;

    private int TotalPages =>
        (int)Math.Ceiling((double)FilteredProducts.Count() / PageSize);

    private IEnumerable<ProductSummaryDto> PagedProducts =>
        FilteredProducts
            .Skip((Page - 1) * PageSize)
            .Take(PageSize);

    private void ChangePage(int page)
    {
        if (page < 1 || page > TotalPages) return;
        Page = page;
    }
}
