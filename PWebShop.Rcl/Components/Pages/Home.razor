@page "/"
@page "/featured"
@page "/collections"
@inject CartService CartService
@layout PWebShop.Rcl.Components.Layout.MainLayout
@using PWebShop.Domain.Entities
@using PWebShop.Rcl.Services
@using PWebShop.Rcl.Dtos
@using System.Net.Http.Json
@inject ICategoryService CategoryService
@inject HttpClient Http
@inject NavigationManager Nav
@implements IDisposable

<div class="container-fluid px-4 py-4">


    <!-- Category Carousel -->
    @if (Categories != null && Categories.Any())
    {
        <div class="category-carousel-container mb-5">
            <div class="d-flex gap-3 overflow-auto pb-3 category-scroll" style="scroll-behavior: smooth;">
                <button class="btn border-0 p-0 category-card @(SelectedCategoryId == null ? "active" : "")" 
                        @onclick="() => SelectCategory(null)"
                        style="min-width: 160px; width: 160px;">
                    <div class="card h-100 shadow-sm rounded-4 overflow-hidden border-0">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 100px;">
                            <span class="material-icons fs-1 text-muted">grid_view</span>
                        </div>
                        <div class="card-body p-2 text-center d-flex align-items-center justify-content-center bg-white">
                            <span class="fw-bold small text-dark">All Categories</span>
                        </div>
                    </div>
                </button>

                @foreach (var category in FlattenedCategories)
                {
                    <button class="btn border-0 p-0 category-card @(SelectedCategoryId == category.Id ? "active" : "")" 
                            @onclick="() => SelectCategory(category.Id)"
                            style="min-width: 160px; width: 160px;">
                        <div class="card h-100 shadow-sm rounded-4 overflow-hidden border-0">
                            <div class="card-img-top position-relative" style="height: 100px; background-color: #f8f9fa;">
                                <img src="@GetImageUrl(category.ImageUrl, category.DisplayName)" 
                                     class="w-100 h-100" 
                                     style="object-fit: cover;" 
                                     alt="@category.DisplayName">
                                <div class="category-overlay"></div>
                            </div>
                            <div class="card-body p-2 text-center d-flex align-items-center justify-content-center bg-white">
                                <span class="fw-bold small text-dark text-truncate w-100" title="@category.DisplayName">@category.DisplayName</span>
                            </div>
                        </div>
                    </button>
                }
            </div>
        </div>
    }

    <!-- Product Carousel -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">
                    @if (!string.IsNullOrEmpty(SearchTerm))
                    {
                        <span>Search results for "@SearchTerm"</span>
                    }
                    else if (IsFeaturedRoute)
                    {
                        <span>Featured Products</span>
                    }
                    else if (IsCollectionsRoute)
                    {
                        <span>Collections (For Display)</span>
                    }
                    else if (SelectedCategoryId.HasValue)
                    {
                        @GetCategoryName(SelectedCategoryId.Value)
                    }
                    else
                    {
                        <span>All Products</span>
                    }
                </h4>
                
                <!-- Search and Sort Controls -->
                <div class="d-flex gap-3 align-items-center">

                    
                    @if (!IsSpecialRoute)
                    {
                        <select class="form-select form-select-sm" style="width: 150px;" @bind="SortOption" @bind:after="ApplyFilters">
                            <option value="name_asc">Name (A-Z)</option>
                            <option value="name_desc">Name (Z-A)</option>
                            <option value="price_asc">Price (Low-High)</option>
                            <option value="price_desc">Price (High-Low)</option>
                        </select>
                    }
                </div>
            </div>

            @if (IsLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!FilteredProducts.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <span class="material-icons display-1 text-muted">search_off</span>
                    </div>
                    <h5 class="text-muted">No products found</h5>
                    <p class="text-muted">Try adjusting your filters or search query.</p>
                    <button class="btn btn-primary mt-2" @onclick="ResetFilters">View All Products</button>
                </div>
            }
            else
            {
                <div class="d-flex overflow-auto gap-3 pb-4 px-2" style="scroll-snap-type: x mandatory; -webkit-overflow-scrolling: touch;">
                    @foreach (var product in FilteredProducts)
                    {
                        <div class="card shadow-sm border-0 h-100 product-carousel-item" @onclick="() => ShowDetails(product)">
                            <div class="position-relative">
                                <img src="@GetImageUrl(product.MainImageUrl, product.Name)" 
                                     class="card-img-top" 
                                     alt="@product.Name" 
                                     style="height: 300px; object-fit: cover;">
                                
                                @if (product.CurrentPrice < 0) // Placeholder logic for original price check if needed
                                {
                                    <span class="position-absolute top-0 end-0 badge bg-danger m-2">Sale</span>
                                }
                                @if (product.IsFeatured)
                                {
                                    <span class="position-absolute top-0 start-0 badge bg-warning text-dark m-2">Featured</span>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-truncate">@product.Name</h5>
                                <p class="card-text small text-muted text-truncate">@product.CategoryName</p>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <span class="h5 mb-0 text-primary">â‚¬@product.CurrentPrice.ToString("F2")</span>
                                    <button class="btn btn-sm btn-outline-primary rounded-circle" @onclick:stopPropagation="true" @onclick="() => AddToCart(product)">
                                        <span class="material-icons fs-6">add</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<PWebShop.Rcl.Components.Shared.ProductDetailModal @ref="_modal" OnAddToCart="AddToCart" />

<style>
    .category-scroll::-webkit-scrollbar {
        height: 6px;
    }
    .category-scroll::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }
    .category-scroll::-webkit-scrollbar-thumb {
        background: #ccc;
        border-radius: 10px;
    }
    .category-scroll::-webkit-scrollbar-thumb:hover {
        background: #aaa;
    }

    .category-card {
        transition: transform 0.2s ease;
    }
    .category-card:hover {
        transform: translateY(-3px);
    }
    .category-card.active .card {
        border: 2px solid var(--bs-primary) !important;
        background-color: rgba(var(--bs-primary-rgb), 0.05);
    }

    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }

    /* Carousel Item Sizing */
    .product-carousel-item {
        min-width: 85vw;
        scroll-snap-align: center;
        flex: 0 0 auto;
    }

    @@media (min-width: 768px) {
        .product-carousel-item {
            min-width: 280px; /* Show multiple items on larger screens */
        }
    }
</style>

@code {
    [SupplyParameterFromQuery]
    public int? CategoryId { get; set; }

    [SupplyParameterFromQuery]
    public string? Search { get; set; }

    private IEnumerable<CategoryTreeDto>? Categories;
    private List<CategoryTreeDto> FlattenedCategories = new();
    private List<ProductSummaryDto> AllProducts = new();
    private List<ProductSummaryDto> FilteredProducts = new();
    private List<AvailabilityMethodDto>? AvailabilityMethods;
    private ProductSummaryDto? HeroProduct;
    
    private int? SelectedCategoryId;
    private double? MinPrice;
    private double? MaxPrice;
    private string SortOption = "name_asc";
    private string? SearchTerm;
    private HashSet<int> SelectedAvailabilityMethodIds = new();
    private bool ShowFeatured = true;
    private bool ShowListingOnly = true;
    
    private bool IsLoading = true;
    private PWebShop.Rcl.Components.Shared.ProductDetailModal _modal = default!;

    private bool IsFeaturedRoute => Nav.Uri.EndsWith("/featured", StringComparison.OrdinalIgnoreCase);
    private bool IsCollectionsRoute => Nav.Uri.EndsWith("/collections", StringComparison.OrdinalIgnoreCase);
    private bool IsSpecialRoute => IsFeaturedRoute || IsCollectionsRoute;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("Home: OnInitializedAsync started");
        try
        {
            IsLoading = true;
            Console.WriteLine("Home: Fetching categories...");
            Categories = await CategoryService.GetCategoryTreeAsync();
            Console.WriteLine($"Home: Fetched {Categories?.Count() ?? 0} categories");
            FlattenCategories(Categories);
            
            Console.WriteLine("Home: Fetching products...");
            AllProducts = await Http.GetFromJsonAsync<List<ProductSummaryDto>>("api/products") ?? new();
            Console.WriteLine($"Home: Fetched {AllProducts.Count} products");
            
            Console.WriteLine("Home: Fetching availability methods...");
            AvailabilityMethods = await Http.GetFromJsonAsync<List<AvailabilityMethodDto>>("api/availabilitymethods");
            Console.WriteLine($"Home: Fetched {AvailabilityMethods?.Count ?? 0} availability methods");
            
            // Select random hero product
            var featuredProducts = AllProducts.Where(p => p.IsFeatured).ToList();
            if (featuredProducts.Any())
            {
                var random = new Random();
                HeroProduct = featuredProducts[random.Next(featuredProducts.Count)];
            }
            
            Nav.LocationChanged += HandleLocationChanged;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Home Error: {ex}");
        }
        finally
        {
            IsLoading = false;
            Console.WriteLine("Home: OnInitializedAsync completed");
        }
    }

    private void FlattenCategories(IEnumerable<CategoryTreeDto>? categories)
    {
        if (categories == null) return;
        
        foreach (var category in categories)
        {
            FlattenedCategories.Add(category);
            FlattenCategories(category.Children);
        }
    }

    public void Dispose()
    {
        Nav.LocationChanged -= HandleLocationChanged;
    }

    private void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        ApplyFilters();
        StateHasChanged();
    }

    protected override void OnParametersSet()
    {
        if (CategoryId != SelectedCategoryId)
        {
            SelectedCategoryId = CategoryId;
        }

        if (Search != SearchTerm)
        {
            SearchTerm = Search;
        }

        ApplyFilters();
    }

    private void SelectCategory(int? categoryId)
    {
        SelectedCategoryId = categoryId;
        ApplyFilters();
    }

    private void AddToCart(ProductSummaryDto product)
    {
        CartService.AddItem(new CartItem
        {
            ProductId = product.Id,
            ProductName = product.Name,
            Price = product.CurrentPrice,
            Quantity = 1,
            ImageUrl = product.MainImageUrl
        });
    }

    private void AddToCart((ProductDetailDto product, int quantity) details)
    {
        CartService.AddItem(new CartItem
        {
            ProductId = details.product.Id,
            ProductName = details.product.Name,
            Price = details.product.CurrentPrice,
            Quantity = details.quantity,
            ImageUrl = details.product.Images.FirstOrDefault(i => i.IsMain)?.Url,
            Product = new Product 
            { 
                Id = details.product.Id, 
                Name = details.product.Name, 
                FinalPrice = details.product.CurrentPrice,
                Images = details.product.Images.Select(i => new ProductImage { Url = i.Url, IsMain = i.IsMain }).ToList()
            }
        });
    }

    private async Task ShowDetails(ProductSummaryDto summary)
    {
        try 
        {
            var product = await Http.GetFromJsonAsync<ProductDetailDto>($"api/products/{summary.Id}");
            if (product != null)
            {
                _modal.Show(product);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching product details: {ex.Message}");
        }
    }

    private void ApplyFilters()
    {
        var query = AllProducts.AsEnumerable();

        // Filter by Category
        if (SelectedCategoryId.HasValue)
        {
            // Since we flattened the view, we might want to include children if the user selects a parent
            // But for now, let's just match the exact category or its children
            var categoryIds = GetDescendantCategoryIds(SelectedCategoryId.Value);
            query = query.Where(p => categoryIds.Contains(p.CategoryId));
        }

        // Filter by Search Term
        if (!string.IsNullOrWhiteSpace(SearchTerm))
        {
            query = query.Where(p => p.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) || 
                                     p.ShortDescription.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
        }

        // Route-based filtering
        if (IsFeaturedRoute)
        {
            query = query.Where(p => p.IsFeatured);
        }
        else if (IsCollectionsRoute)
        {
            query = query.Where(p => p.IsListingOnly);
        }
        else
        {
            if (!ShowFeatured) query = query.Where(p => !p.IsFeatured);
            if (!ShowListingOnly) query = query.Where(p => !p.IsListingOnly);
        }

        // Sorting
        query = SortOption switch
        {
            "name_desc" => query.OrderByDescending(p => p.Name),
            "price_asc" => query.OrderBy(p => p.CurrentPrice),
            "price_desc" => query.OrderByDescending(p => p.CurrentPrice),
            _ => query.OrderBy(p => p.Name)
        };

        FilteredProducts = query.ToList();

        // Inject Hero Product at the top if it exists and we are not in a special route (unless it's featured route?)
        // User said: "Als je een bepaalde categorie selecteerd maakt het niet uit welke faetured product erbij komt."
        // This implies it should always be there on the main page view, even with filters.
        // But maybe not on "Collections" or "Featured" specific pages if it conflicts?
        // Let's stick to the main view logic: !IsSpecialRoute && string.IsNullOrEmpty(SearchTerm)
        // Actually, user said "Hij moet gewoon tussen de producten staan".
        // If I search, maybe I don't want a random product unrelated to search?
        // Let's assume for now it's for browsing (Category or All).
        
        if (HeroProduct != null && !IsSpecialRoute && string.IsNullOrEmpty(SearchTerm))
        {
            // Remove it if it's already there to avoid duplicates
            FilteredProducts.RemoveAll(p => p.Id == HeroProduct.Id);
            
            // Insert at the top
            FilteredProducts.Insert(0, HeroProduct);
        }
    }

    private void ResetFilters()
    {
        SelectedCategoryId = null;
        SearchTerm = null;
        SortOption = "name_asc";
        ApplyFilters();
    }

    private HashSet<int> GetDescendantCategoryIds(int categoryId)
    {
        var ids = new HashSet<int> { categoryId };
        var category = FindCategory(Categories, categoryId);
        
        if (category != null)
        {
            AddChildrenIds(category, ids);
        }

        return ids;
    }

    private CategoryTreeDto? FindCategory(IEnumerable<CategoryTreeDto>? categories, int id)
    {
        if (categories == null) return null;

        foreach (var cat in categories)
        {
            if (cat.Id == id) return cat;
            var found = FindCategory(cat.Children, id);
            if (found != null) return found;
        }
        return null;
    }

    private void AddChildrenIds(CategoryTreeDto category, HashSet<int> ids)
    {
        foreach (var child in category.Children)
        {
            ids.Add(child.Id);
            AddChildrenIds(child, ids);
        }
    }

    private string GetCategoryName(int id)
    {
        var category = FindCategory(Categories, id);
        return category?.DisplayName ?? "Unknown Category";
    }

    private string GetImageUrl(string? url, string? label = null)
    {
        if (string.IsNullOrEmpty(url)) 
        {
            var text = !string.IsNullOrEmpty(label) ? Uri.EscapeDataString(label) : "No+Image";
            return $"https://placehold.co/500x500?text={text}";
        }
        if (url.StartsWith("http")) return url;
        
        // Use the BaseAddress from the injected HttpClient which is configured correctly for each platform
        var baseAddress = Http.BaseAddress?.ToString().TrimEnd('/') ?? "http://localhost:5091";
        return $"{baseAddress}{url}";
    }
}


