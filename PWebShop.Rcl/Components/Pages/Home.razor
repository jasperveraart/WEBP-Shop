@page "/"
@page "/featured"
@page "/collections"
@inject CartService CartService
@layout PWebShop.Rcl.Components.Layout.MainLayout
@using PWebShop.Domain.Entities
@using Microsoft.AspNetCore.Components.Forms
@using PWebShop.Rcl.Services
@using PWebShop.Rcl.Dtos
@using System.Net.Http.Json
@inject ICategoryService CategoryService
@inject HttpClient Http
@inject NavigationManager Nav
@implements IDisposable

<div class="container py-4">
    <div class="row">
        <!-- Sidebar Filters -->
        @if (!IsSpecialRoute)
        {
            <div class="col-lg-3 mb-4">
                <div class="card border-0 shadow-sm p-3">
                    <h5 class="fw-bold mb-3">Filters</h5>
                    
                    <!-- Categories -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Product Categories</h6>
                        <div class="list-group list-group-flush">
                            <button class="list-group-item list-group-item-action border-0 px-0 py-1 @(SelectedCategoryId == null ? "fw-bold text-primary" : "")"
                                    @onclick="() => SelectCategory(null)">
                                All Categories
                            </button>
                            
                            @if (Categories != null)
                            {
                                @foreach (var category in Categories)
                                {
                                    <div class="category-item">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <button class="list-group-item list-group-item-action border-0 px-0 py-1 @(SelectedCategoryId == category.Id ? "fw-bold text-primary" : "")"
                                                    @onclick="() => SelectCategory(category.Id)">
                                                @category.DisplayName
                                            </button>
                                            @if (category.Children.Any())
                                            {
                                                <span class="material-icons fs-6 text-muted" 
                                                      style="cursor: pointer;"
                                                      @onclick="() => ToggleCategory(category.Id)">
                                                    @(ExpandedCategories.Contains(category.Id) ? "expand_less" : "expand_more")
                                                </span>
                                            }
                                        </div>
                                        
                                        @if (category.Children.Any() && ExpandedCategories.Contains(category.Id))
                                        {
                                            <div class="ms-3 border-start ps-2">
                                                @foreach (var child in category.Children)
                                                {
                                                    <button class="list-group-item list-group-item-action border-0 px-0 py-1 small @(SelectedCategoryId == child.Id ? "fw-bold text-primary" : "")"
                                                            @onclick="() => SelectCategory(child.Id)">
                                                        @child.DisplayName
                                                    </button>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <!-- Availability Methods -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Availability</h6>
                        @if (AvailabilityMethods != null)
                        {
                            @foreach (var method in AvailabilityMethods)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="method-@method.Id"
                                           checked="@SelectedAvailabilityMethodIds.Contains(method.Id)"
                                           @onchange="@(e => ToggleAvailabilityMethod(method.Id, e.Value))">
                                    <label class="form-check-label" for="method-@method.Id">
                                        @method.DisplayName
                                    </label>
                                </div>
                            }
                        }
                    </div>

                    <!-- Display Options -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Display Options</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="showFeatured" @bind="ShowFeatured" @bind:after="ApplyFilters">
                            <label class="form-check-label" for="showFeatured">
                                Show Featured
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="showListingOnly" @bind="ShowListingOnly" @bind:after="ApplyFilters">
                            <label class="form-check-label" for="showListingOnly">
                                Show For Display
                            </label>
                        </div>
                    </div>

                    <!-- Price Range -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Price Range</h6>
                        <div class="d-flex gap-2 align-items-center mb-2">
                            <input type="number" class="form-control form-control-sm" placeholder="Min" @bind="MinPrice">
                            <span>-</span>
                            <input type="number" class="form-control form-control-sm" placeholder="Max" @bind="MaxPrice">
                        </div>
                        <button class="btn btn-primary btn-sm w-100" @onclick="ApplyFilters">Apply Filters</button>
                    </div>

                    <button class="btn btn-outline-secondary btn-sm w-100" @onclick="ResetFilters">Reset</button>
                </div>
            </div>
        }

        <!-- Product Grid -->
        <div class="@(IsSpecialRoute ? "col-12" : "col-lg-9")">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">
                    @if (!string.IsNullOrEmpty(SearchTerm))
                    {
                        <span>Search results for "@SearchTerm"</span>
                    }
                    else if (IsFeaturedRoute)
                    {
                        <span>Featured Products</span>
                    }
                    else if (IsCollectionsRoute)
                    {
                        <span>Collections (For Display)</span>
                    }
                    else if (SelectedCategoryId.HasValue)
                    {
                        @GetCategoryName(SelectedCategoryId.Value)
                    }
                    else
                    {
                        <span>All Products</span>
                    }
                </h4>
                <div class="d-flex align-items-center gap-2">
                    @if (!IsSpecialRoute)
                    {
                        <label class="text-muted small text-nowrap">Sort by:</label>
                        <select class="form-select form-select-sm" @bind="SortOption" @bind:after="ApplyFilters">
                            <option value="name_asc">Name (A-Z)</option>
                            <option value="name_desc">Name (Z-A)</option>
                            <option value="price_asc">Price (Low-High)</option>
                            <option value="price_desc">Price (High-Low)</option>
                        </select>
                    }
                </div>
            </div>

            @if (IsLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!PagedProducts.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <span class="material-icons display-1 text-muted">search_off</span>
                    </div>
                    <h5 class="text-muted">No products found</h5>
                    <p class="text-muted">Try adjusting your filters or search query.</p>
                    <button class="btn btn-primary mt-2" @onclick="ResetFilters">View All Products</button>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var product in PagedProducts)
                    {
                        <div class="col-md-6 col-lg-4">
                            <a href="/product/@product.Id" class="text-decoration-none text-dark">
                                <div class="card h-100 border-0 shadow-sm hover-lift">
                                    <div class="position-relative" style="height: 250px; overflow: hidden; background-color: #f8f9fa;">
                                        @if (!IsSpecialRoute)
                                        {
                                            @if (product.IsFeatured)
                                            {
                                                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">Featured</span>
                                            }
                                            @if (product.IsListingOnly)
                                            {
                                                <span class="badge bg-danger text-white position-absolute top-0 end-0 m-2">For Display</span>
                                            }
                                        }
                                        <img src="@GetImageUrl(product.MainImageUrl)" 
                                             class="card-img-top w-100 h-100" 
                                             style="object-fit: contain; padding: 1rem;" 
                                             alt="@product.Name">
                                    </div>
                                    <div class="card-body">
                                        <h6 class="card-title fw-bold mb-1">@product.Name</h6>
                                        <p class="text-muted small mb-2">@product.CategoryName</p>
                                        @if (!product.IsListingOnly)
                                        {
                                            <h5 class="fw-bold mb-0">â‚¬@product.CurrentPrice.ToString("F2")</h5>
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (TotalPages > 1)
                {
                    <nav class="mt-5 d-flex justify-content-center">
                        <ul class="pagination">
                            <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)">
                                    <span class="material-icons fs-6">chevron_left</span>
                                </button>
                            </li>
                            @for (int i = 1; i <= TotalPages; i++)
                            {
                                var pageIndex = i;
                                <li class="page-item @(CurrentPage == pageIndex ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(pageIndex)">@pageIndex</button>
                                </li>
                            }
                            <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)">
                                    <span class="material-icons fs-6">chevron_right</span>
                                </button>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>

@code {
    [SupplyParameterFromQuery]
    public int? CategoryId { get; set; }

    [SupplyParameterFromQuery]
    public string? Search { get; set; }

    private IEnumerable<CategoryTreeDto>? Categories;
    private List<ProductSummaryDto> AllProducts = new();
    private List<ProductSummaryDto> FilteredProducts = new();
    private List<AvailabilityMethodDto>? AvailabilityMethods;
    
    private IEnumerable<ProductSummaryDto> PagedProducts => FilteredProducts
        .Skip((CurrentPage - 1) * PageSize)
        .Take(PageSize);

    private int? SelectedCategoryId;
    private double? MinPrice;
    private double? MaxPrice;
    private string SortOption = "name_asc";
    private string? SearchTerm;
    private HashSet<int> SelectedAvailabilityMethodIds = new();
    private bool ShowFeatured = true;
    private bool ShowListingOnly = true;
    
    private int CurrentPage = 1;
    private int PageSize = 9;
    private int TotalPages => (int)Math.Ceiling((double)FilteredProducts.Count / PageSize);
    private bool IsLoading = true;

    private HashSet<int> ExpandedCategories = new();

    private bool IsFeaturedRoute => Nav.Uri.EndsWith("/featured", StringComparison.OrdinalIgnoreCase);
    private bool IsCollectionsRoute => Nav.Uri.EndsWith("/collections", StringComparison.OrdinalIgnoreCase);
    private bool IsSpecialRoute => IsFeaturedRoute || IsCollectionsRoute;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            IsLoading = true;
            Categories = await CategoryService.GetCategoryTreeAsync();
            AllProducts = await Http.GetFromJsonAsync<List<ProductSummaryDto>>("api/products") ?? new();
            AvailabilityMethods = await Http.GetFromJsonAsync<List<AvailabilityMethodDto>>("api/availabilitymethods");
            
            Nav.LocationChanged += HandleLocationChanged;
            
            // Initial filter application will happen in OnParametersSetAsync
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    public void Dispose()
    {
        Nav.LocationChanged -= HandleLocationChanged;
    }

    private void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        ApplyFilters();
        StateHasChanged();
    }

    protected override void OnParametersSet()
    {
        // Update state from query parameters if they change
        if (CategoryId != SelectedCategoryId)
        {
            SelectedCategoryId = CategoryId;
            if (SelectedCategoryId.HasValue)
            {
                ExpandCategoryPath(SelectedCategoryId.Value);
            }
        }

        if (Search != SearchTerm)
        {
            SearchTerm = Search;
        }

        ApplyFilters();
    }

    private void SelectCategory(int? categoryId)
    {
        SelectedCategoryId = categoryId;
        
        // Auto-expand logic: Collapse all, then expand path to selected
        ExpandedCategories.Clear();
        if (categoryId.HasValue)
        {
            ExpandCategoryPath(categoryId.Value);
        }
        
        CurrentPage = 1;
        ApplyFilters();
    }

    private void ToggleCategory(int categoryId)
    {
        if (ExpandedCategories.Contains(categoryId))
        {
            ExpandedCategories.Remove(categoryId);
        }
        else
        {
            ExpandedCategories.Add(categoryId);
        }
    }

    private void ToggleAvailabilityMethod(int methodId, object? checkedValue)
    {
        if (checkedValue is bool isChecked)
        {
            if (isChecked)
            {
                SelectedAvailabilityMethodIds.Add(methodId);
            }
            else
            {
                SelectedAvailabilityMethodIds.Remove(methodId);
            }
            CurrentPage = 1;
            ApplyFilters();
        }
    }

    private void ExpandCategoryPath(int categoryId)
    {
        var path = FindCategoryPath(Categories, categoryId);
        if (path != null)
        {
            foreach (var id in path)
            {
                ExpandedCategories.Add(id);
            }
        }
    }

    private List<int>? FindCategoryPath(IEnumerable<CategoryTreeDto>? categories, int targetId)
    {
        if (categories == null) return null;

        foreach (var cat in categories)
        {
            if (cat.Id == targetId)
            {
                return new List<int> { cat.Id };
            }

            var path = FindCategoryPath(cat.Children, targetId);
            if (path != null)
            {
                path.Insert(0, cat.Id);
                return path;
            }
        }
        return null;
    }

    private void ApplyFilters()
    {
        var query = AllProducts.AsEnumerable();

        // Filter by Category (including children)
        if (SelectedCategoryId.HasValue)
        {
            var categoryIds = GetDescendantCategoryIds(SelectedCategoryId.Value);
            query = query.Where(p => categoryIds.Contains(p.CategoryId));
        }

        // Filter by Search Term
        if (!string.IsNullOrWhiteSpace(SearchTerm))
        {
            query = query.Where(p => p.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) || 
                                     p.ShortDescription.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
        }

        // Filter by Price
        if (MinPrice.HasValue)
        {
            query = query.Where(p => p.CurrentPrice >= MinPrice.Value);
        }

        if (MaxPrice.HasValue)
        {
            query = query.Where(p => p.CurrentPrice <= MaxPrice.Value);
        }

        // Filter by Availability Methods
        if (SelectedAvailabilityMethodIds.Any())
        {
            query = query.Where(p => p.AvailabilityMethods.Any(am => SelectedAvailabilityMethodIds.Contains(am.Id)));
        }

        // Route-based filtering
        if (IsFeaturedRoute)
        {
            query = query.Where(p => p.IsFeatured);
        }
        else if (IsCollectionsRoute)
        {
            query = query.Where(p => p.IsListingOnly);
        }
        else
        {
            // Standard filters
            if (!ShowFeatured)
            {
                query = query.Where(p => !p.IsFeatured);
            }

            if (!ShowListingOnly)
            {
                query = query.Where(p => !p.IsListingOnly);
            }
        }

        // Sorting
        query = SortOption switch
        {
            "name_desc" => query.OrderByDescending(p => p.IsFeatured).ThenByDescending(p => p.Name),
            "price_asc" => query.OrderByDescending(p => p.IsFeatured).ThenBy(p => p.CurrentPrice),
            "price_desc" => query.OrderByDescending(p => p.IsFeatured).ThenByDescending(p => p.CurrentPrice),
            _ => query.OrderByDescending(p => p.IsFeatured).ThenBy(p => p.Name)
        };

        FilteredProducts = query.ToList();
        
        // Reset to first page if current page is out of bounds
        if (CurrentPage > TotalPages && TotalPages > 0)
        {
            CurrentPage = 1;
        }
        else if (TotalPages == 0)
        {
            CurrentPage = 1;
        }
    }

    private void ResetFilters()
    {
        SelectedCategoryId = null;
        MinPrice = null;
        MaxPrice = null;
        SearchTerm = null;
        SortOption = "name_asc";
        SelectedAvailabilityMethodIds.Clear();
        CurrentPage = 1;
        ApplyFilters();
    }

    private void ChangePage(int page)
    {
        if (page >= 1 && page <= TotalPages)
        {
            CurrentPage = page;
        }
    }

    private HashSet<int> GetDescendantCategoryIds(int categoryId)
    {
        var ids = new HashSet<int> { categoryId };
        var category = FindCategory(Categories, categoryId);
        
        if (category != null)
        {
            AddChildrenIds(category, ids);
        }

        return ids;
    }

    private CategoryTreeDto? FindCategory(IEnumerable<CategoryTreeDto>? categories, int id)
    {
        if (categories == null) return null;

        foreach (var cat in categories)
        {
            if (cat.Id == id) return cat;
            var found = FindCategory(cat.Children, id);
            if (found != null) return found;
        }
        return null;
    }

    private void AddChildrenIds(CategoryTreeDto category, HashSet<int> ids)
    {
        foreach (var child in category.Children)
        {
            ids.Add(child.Id);
            AddChildrenIds(child, ids);
        }
    }

    private string GetCategoryName(int id)
    {
        var category = FindCategory(Categories, id);
        return category?.DisplayName ?? "Unknown Category";
    }

    private string GetImageUrl(string? url)
    {
        if (string.IsNullOrEmpty(url)) return "https://via.placeholder.com/500x500?text=No+Image";
        if (url.StartsWith("http")) return url;
        return $"http://localhost:5091{url}";
    }
}


