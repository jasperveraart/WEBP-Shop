@page "/orders"
@layout PWebShop.Rcl.Components.Layout.MainLayout
@using PWebShop.Rcl.Dtos
@using PWebShop.Rcl.Services
@inject IOrderService OrderService

<div class="container my-4">

    <h2 class="mb-4">Your Orders</h2>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading orders...</p>
        </div>
    }
    else if (Orders.Count == 0)
    {
        <div class="alert alert-info">
            You have no orders yet.
        </div>
    }
    else
    {
        @foreach (var order in Orders)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Order #@order.Id</strong>
                        <span class="text-muted">— @order.OrderDate.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div>
                        @if (order.Status == "Paid" || order.Status == "Completed")
                        {
                            <span class="badge bg-success me-3">@order.Status</span>
                        }
                        else if (order.Status == "Cancelled")
                        {
                            <span class="badge bg-danger me-3">@order.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark me-3">@order.Status</span>
                            <button class="btn btn-outline-danger btn-sm me-2"
                                    @onclick="() => CancelOrder(order.Id)">
                                Cancel
                            </button>
                        }
                        
                        <button class="btn btn-outline-primary btn-sm"
                                @onclick="() => OpenOrderDetails(order)">
                            View Details
                        </button>
                    </div>
                </div>

                <div class="card-body">
                    @foreach (var item in order.Lines.Take(2))
                    {
                        <div class="row mb-3">
                            <div class="col-8">
                                <h6>@item.ProductName</h6>
                                <p class="text-muted small">Qty: @item.Quantity</p>
                            </div>

                            <div class="col-4 text-end">
                                <strong>€@item.LineTotal.ToString("F2")</strong>
                            </div>
                        </div>
                    }
                    
                    @if (order.Lines.Count > 2)
                    {
                        <div class="text-center text-muted small mb-3">
                            ... and @(order.Lines.Count - 2) more item(s)
                        </div>
                    }

                    <hr />

                    <div class="d-flex justify-content-between mt-3">
                        <strong>Total:</strong>
                        <strong>€@order.TotalAmount.ToString("F2")</strong>
                    </div>
                </div>
            </div>
        }
    }

</div>

@* ---------------- MODAL DETTAGLI ORDINE ---------------- *@

@if (SelectedOrder != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Order #@SelectedOrder.Id Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>

                <div class="modal-body">

                    <h6 class="mb-3">Shipping Information</h6>
                    <p class="mb-0">
                        @SelectedOrder.ShippingAddress
                    </p>

                    <h6 class="mt-4">Payment Status</h6>
                    <p class="mb-0">@SelectedOrder.PaymentStatus</p>

                    <h6 class="mt-4">Products</h6>

                    @foreach (var item in SelectedOrder.Lines)
                    {
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <div>
                                <strong>@item.ProductName</strong> (@item.Quantity)<br />
                            </div>
                            <div class="text-end">
                                @($"€{item.LineTotal:F2}")
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <strong>Total</strong>
                        <strong>@($"€{SelectedOrder.TotalAmount:F2}")</strong>
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Close</button>
                </div>

            </div>
        </div>
    </div>
}


@code {
    private List<OrderDto> Orders = new();
    private OrderDto? SelectedOrder;
    private bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var result = await OrderService.GetOrders();
            Orders = result.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void OpenOrderDetails(OrderDto order)
    {
        SelectedOrder = order;
    }

    private void CloseModal()
    {
        SelectedOrder = null;
    }

    private async Task CancelOrder(int orderId)
    {
        try
        {
            var success = await OrderService.CancelOrder(orderId);
            if (success)
            {
                // Refresh list
                var result = await OrderService.GetOrders();
                Orders = result.ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cancelling order: {ex.Message}");
        }
    }
}
