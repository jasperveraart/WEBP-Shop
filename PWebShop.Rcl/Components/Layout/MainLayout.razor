@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager
@using PWebShop.Rcl.Components.Layout
@using PWebShop.Rcl.Components
@using PWebShop.Rcl.Services
@inject ICategoryService CategoryService

@inject NavigationManager Nav
@inject CartService CartService
@implements IDisposable

<div class="page">
    <main>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <span class="material-icons text-primary">storefront</span>
                    <span class="fw-bold text-dark">Webshop</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                Shop
                            </a>
                            <ul class="dropdown-menu">
                                @if (Categories == null)
                                {
                                    <li><span class="dropdown-item-text">Loading...</span></li>
                                }
                                else
                                {
                                    @foreach (var category in Categories)
                                    {
                                        <li>
                                            <a class="dropdown-item d-flex justify-content-between align-items-center" 
                                               href="/?categoryId=@category.Id">
                                                @category.DisplayName
                                                @if (category.Children.Any())
                                                {
                                                    <span class="material-icons fs-6 text-muted">chevron_right</span>
                                                }
                                            </a>
                                            @if (category.Children.Any())
                                            {
                                                <ul class="dropdown-menu submenu">
                                                    @foreach (var child in category.Children)
                                                    {
                                                        <li><a class="dropdown-item" href="/?categoryId=@child.Id">@child.DisplayName</a></li>
                                                    }
                                                </ul>
                                            }
                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/deals">Deals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/contact">Contact</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <div class="input-group bg-light rounded-pill px-3 py-1" style="width: 300px;">
                            <span class="input-group-text border-0 bg-transparent p-0">
                                <span class="material-icons text-muted">search</span>
                            </span>
                            <input type="text" class="form-control border-0 bg-transparent shadow-none" 
                                   placeholder="Search products..." 
                                   @bind="SearchQuery" 
                                   @bind:event="oninput"
                                   @onkeydown="HandleSearch">
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <a href="/account" class="btn btn-link text-dark p-1">
                                <span class="material-icons">person</span>
                            </a>
                            <a href="/cart" class="btn btn-link text-dark p-1 position-relative">
                                <span class="material-icons">shopping_cart</span>
                                @if (CartItemCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary" 
                                          style="font-size: 0.6rem; padding: 0.25em 0.4em;">
                                        @CartItemCount
                                        <span class="visually-hidden">items in cart</span>
                                    </span>
                                }
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <article class="content">
            @Body
        </article>
        
        <!-- Footer -->
        <footer class="bg-light py-4 mt-auto border-top">
            <div class="container text-center text-muted">
                <small>&copy; 2024 Webshop. All rights reserved.</small>
            </div>
        </footer>
    </main>
</div>

@code {
    private IEnumerable<CategoryTreeDto>? Categories;
    private string SearchQuery { get; set; } = "";
    private int CartItemCount => CartService.Items.Sum(i => i.Quantity);

    protected override async Task OnInitializedAsync()
    {
        Categories = await CategoryService.GetCategoryTreeAsync();
        CartService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }

    private void HandleSearch(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Nav.NavigateTo($"/?Search={SearchQuery}");
        }
    }
}