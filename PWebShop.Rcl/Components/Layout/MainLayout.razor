@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager
@using PWebShop.Rcl.Components.Layout
@using PWebShop.Rcl.Components
@using PWebShop.Rcl.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject ICategoryService CategoryService

@inject NavigationManager Nav
@inject CartService CartService
@inject IAuthService AuthService
@implements IDisposable

<div class="page">
    <main>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <span class="material-icons text-primary">storefront</span>
                    <span class="fw-bold text-dark">Webshop</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/featured">Featured</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/collections">Collections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/contact">Contact</a>
                        </li>
                    </ul>

                    <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-3 w-100 w-lg-auto mt-3 mt-lg-0 ms-lg-auto">
                        
                        <!-- Search Bar -->
                        <div class="input-group bg-light rounded-pill px-3 py-1 order-3 order-lg-1 w-100" style="width: 300px;">
                            <span class="input-group-text border-0 bg-transparent p-0">
                                <span class="material-icons text-muted">search</span>
                            </span>
                            <input type="text" class="form-control border-0 bg-transparent shadow-none" 
                                   placeholder="Search products..." 
                                   @bind="SearchQuery" 
                                   @bind:event="oninput"
                                   @onkeydown="HandleSearch">
                        </div>

                        <!-- User Menu -->
                        <div class="order-1 order-lg-2 w-100 w-lg-auto">
                            <AuthorizeView>
                                <Authorized>
                                    <div class="dropdown w-100 w-lg-auto">
                                        <button class="btn btn-link text-dark p-1 text-decoration-none dropdown-toggle d-flex align-items-center gap-1 w-100 w-lg-auto justify-content-between justify-content-lg-start" 
                                                type="button" 
                                                data-bs-toggle="dropdown" 
                                                aria-expanded="false">
                                            <div class="d-flex align-items-center gap-1">
                                                <span class="material-icons">person</span>
                                                <span class="small fw-bold">@context.User.Identity?.Name</span>
                                            </div>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end w-100 w-lg-auto">
                                            <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                            <li><a class="dropdown-item" href="/orders">Orders</a></li>
                                            <AuthorizeView Roles="Supplier" Context="supplierContext">
                                                <li><a class="dropdown-item" href="/supplier">Products</a></li>
                                            </AuthorizeView>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                                        </ul>
                                    </div>
                                </Authorized>
                                <NotAuthorized>
                                    <a href="/login" class="btn btn-primary btn-sm rounded-pill px-3 fw-bold w-100 w-lg-auto d-block d-lg-inline-block text-center">
                                        Sign In
                                    </a>
                                </NotAuthorized>
                            </AuthorizeView>
                        </div>
                            
                        <!-- Cart -->
                        <div class="order-2 order-lg-3 w-100 w-lg-auto">
                            <a href="/cart" class="btn btn-link text-dark p-1 position-relative w-100 w-lg-auto d-flex align-items-center justify-content-between justify-content-lg-center text-decoration-none">
                                <div class="d-flex align-items-center gap-2">
                                    <span class="material-icons">shopping_cart</span>
                                    <span class="d-lg-none fw-bold">Shopping Cart</span>
                                </div>
                                @if (CartItemCount > 0)
                                {
                                    <span class="badge rounded-pill bg-primary">
                                        @CartItemCount
                                        <span class="visually-hidden">items in cart</span>
                                    </span>
                                }
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <article class="content">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <div class="alert alert-danger m-4">
                        <h4>Error</h4>
                        <p>@context.Message</p>
                        <pre>@context.StackTrace</pre>
                    </div>
                </ErrorContent>
            </ErrorBoundary>
        </article>
        
        <!-- Footer -->
        <footer class="bg-light py-4 mt-auto border-top">
            <div class="container text-center text-muted">
                <small>&copy; 2024 Webshop. All rights reserved.</small>
            </div>
        </footer>
    </main>
</div>

@code {
    private IEnumerable<CategoryTreeDto>? Categories;
    private string SearchQuery { get; set; } = "";
    private int CartItemCount => CartService.Items.Sum(i => i.Quantity);

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("MainLayout: OnInitializedAsync started");
        try 
        {
            Categories = await CategoryService.GetCategoryTreeAsync();
            Console.WriteLine($"MainLayout: Loaded {Categories?.Count() ?? 0} categories");
            CartService.OnChange += StateHasChanged;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"MainLayout Error: {ex}");
        }
        Console.WriteLine("MainLayout: OnInitializedAsync completed");
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }

    private void HandleSearch(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Nav.NavigateTo($"/?Search={SearchQuery}");
            SearchQuery = "";
        }
    }

    private async Task Logout()
    {
        await AuthService.Logout();
        Nav.NavigateTo("/");
    }
}