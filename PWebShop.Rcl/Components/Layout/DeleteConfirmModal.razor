<div class="modal fade show" tabindex="-1" style="@(IsVisible ? "display:block; background-color: rgba(0,0,0,0.5);" : "display:none;")">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="Close"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <div class="mb-3">
                    <i class="bi bi-trash text-danger" style="font-size: 3rem;"></i>
                </div>
                <p class="fs-5">@Message</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center border-0 pb-4">
                <button class="btn btn-outline-secondary px-4" @onclick="Close">Cancel</button>
                <button class="btn btn-danger px-4" @onclick="Confirm">Delete</button>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _visible = false;

    public bool IsVisible => _visible;

    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public string Message { get; set; } = "Are you sure you want to delete this item?";

    public void Show()
    {
        _visible = true;
        StateHasChanged();
    }

    public void Close()
    {
        _visible = false;
        StateHasChanged();
    }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync();
        Close();
    }
}