@using PWebShop.Admin.Models
@using PWebShop.Infrastructure.Identity

@if (IsOpen)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(IsEditMode ? "Edit user" : "Create user")</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="HandleCancel"></button>
                </div>

                <EditForm Model="Model" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        <ValidationSummary />
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label" for="emailInput">Email</label>
                                <InputText id="emailInput" class="form-control" @bind-Value="Model.Email" />
                                <ValidationMessage For="() => Model.Email" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="displayNameInput">Display name</label>
                                <InputText id="displayNameInput" class="form-control" @bind-Value="Model.DisplayName" />
                                <ValidationMessage For="() => Model.DisplayName" />
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label class="form-label" for="passwordInput">@(Model.IsNew ? "Password" : "New password (optional)")</label>
                                <InputText id="passwordInput" type="password" class="form-control" @bind-Value="Model.Password" />
                                <ValidationMessage For="() => Model.Password" />
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <div class="form-check form-switch mt-4">
                                    <InputCheckbox id="isActiveInput" class="form-check-input" @bind-Value="Model.IsActive" />
                                    <label class="form-check-label" for="isActiveInput">Active</label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="form-label">Roles</label>
                            <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-2">
                                @if (ShouldRenderRole(ApplicationRoleNames.Customer))
                                {
                                    <div class="col">
                                        <div class="form-check">
                                            <InputCheckbox id="customerRole" class="form-check-input" @bind-Value="Model.IsCustomer" disabled="@IsRoleDisabled(ApplicationRoleNames.Customer)" />
                                            <label class="form-check-label" for="customerRole">Customer</label>
                                        </div>
                                    </div>
                                }
                                @if (ShouldRenderRole(ApplicationRoleNames.Supplier))
                                {
                                    <div class="col">
                                        <div class="form-check">
                                            <InputCheckbox id="supplierRole" class="form-check-input" @bind-Value="Model.IsSupplier" disabled="@IsRoleDisabled(ApplicationRoleNames.Supplier)" />
                                            <label class="form-check-label" for="supplierRole">Supplier</label>
                                        </div>
                                    </div>
                                }
                                @if (ShouldRenderRole(ApplicationRoleNames.Employee))
                                {
                                    <div class="col">
                                        <div class="form-check">
                                            <InputCheckbox id="employeeRole" class="form-check-input" @bind-Value="Model.IsEmployee" disabled="@IsRoleDisabled(ApplicationRoleNames.Employee)" />
                                            <label class="form-check-label" for="employeeRole">Employee</label>
                                        </div>
                                    </div>
                                }
                                @if (ShouldRenderRole(ApplicationRoleNames.Administrator))
                                {
                                    <div class="col">
                                        <div class="form-check">
                                            <InputCheckbox id="adminRole" class="form-check-input" @bind-Value="Model.IsAdmin" disabled="@IsRoleDisabled(ApplicationRoleNames.Administrator)" />
                                            <label class="form-check-label" for="adminRole">Admin</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" @onclick="HandleCancel">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public bool IsEditMode { get; set; }
    [Parameter] public UserEditModel Model { get; set; } = new();
    [Parameter] public EventCallback<UserEditModel> OnValidSubmit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public IReadOnlyCollection<string> AvailableRoles { get; set; } = Array.Empty<string>();
    [Parameter] public bool DisableAdminEmployeeSelection { get; set; }
    [Parameter] public bool DisableRoleSelection { get; set; }

    private Task HandleValidSubmit() => OnValidSubmit.InvokeAsync(Model);

    private Task HandleCancel() => OnCancel.InvokeAsync();

    private bool ShouldRenderRole(string role) => AvailableRoles.Contains(role);

    private bool IsRoleDisabled(string role)
    {
        if (DisableRoleSelection)
        {
            return true;
        }

        if (!AvailableRoles.Contains(role))
        {
            return true;
        }

        if (DisableAdminEmployeeSelection &&
            (role == ApplicationRoleNames.Administrator || role == ApplicationRoleNames.Employee))
        {
            return true;
        }

        return false;
    }
}
