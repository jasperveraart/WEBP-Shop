@page "/products"
@using Microsoft.AspNetCore.Authorization
@using PWebShop.Infrastructure.Identity
@attribute [Authorize(Roles = $"{ApplicationRoleNames.Administrator},{ApplicationRoleNames.Employee}")]

@rendermode InteractiveServer

<PageTitle>Products</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Products</h3>
        <p class="text-muted mb-0">Browse and manage all products, suppliers and categories.</p>
    </div>
    <button class="btn btn-primary" @onclick="AddProductAsync">Add product</button>
</div>

@if (!string.IsNullOrWhiteSpace(_statusMessage))
{
    <div class="alert alert-success" role="alert">@_statusMessage</div>
}
@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <div class="alert alert-danger" role="alert">@_errorMessage</div>
}

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-12">
                <label class="form-label" for="productSearch">Search</label>
                <div class="input-group input-group-lg">
                    <InputText id="productSearch"
                               class="form-control"
                               placeholder="Search by name, ID, category, supplier or status"
                               @bind-Value="SearchTerm"
                               @bind-Value:event="oninput" />
                    <button class="btn btn-primary" type="button" @onclick="ApplyFilters">Search</button>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <label class="form-label" for="categoryFilter">Category</label>
                <InputSelect id="categoryFilter"
                             class="form-select"
                             @bind-Value="SelectedCategoryId">
                    <option value="">All categories</option>
                    @foreach (var category in _categoryOptions)
                    {
                        <option value="@category.Id">@category.IndentedDisplayName</option>
                    }
                </InputSelect>
            </div>
            <div class="col-lg-4 col-md-6">
                <label class="form-label" for="supplierFilter">Supplier</label>
                <InputSelect id="supplierFilter"
                             class="form-select"
                             @bind-Value="SelectedSupplierId">
                    <option value="">All suppliers</option>
                    @foreach (var supplier in _supplierOptions)
                    {
                        <option value="@supplier.Id">@supplier.DisplayName</option>
                    }
                </InputSelect>
            </div>
            <div class="col-lg-4 col-md-6">
                <label class="form-label" for="statusFilter">Status</label>
                <InputSelect id="statusFilter"
                             class="form-select"
                             @bind-Value="SelectedStatus">
                    <option value="">All statuses</option>
                    @foreach (var status in _statusOptions)
                    {
                        <option value="@status.Value">@status.DisplayName</option>
                    }
                </InputSelect>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>ID</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (_filteredProducts.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No products found.</td>
                </tr>
            }
            else
            {
                @foreach (var product in _pagedProducts)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Id</td>
                        <td>@product.CategoryName</td>
                        <td>@product.SupplierName</td>
                        <td>
                            @{
                                var status = GetStatus(product);
                            }
                            <span class="badge @status.CssClass">@status.Text</span>
                            @if (product.IsListingOnly)
                            {
                                <span class="badge bg-info text-dark ms-1">Listing only</span>
                            }
                        </td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary"
                                    title="Edit product"
                                    aria-label="Edit product"
                                    @onclick="() => OnEditProduct(product)">
                                <span class="material-symbols-outlined" aria-hidden="true">edit</span>
                                <span class="visually-hidden">Edit</span>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mt-3">
    <div class="d-flex align-items-center gap-2">
        <label class="form-label mb-0" for="pageSize">Items per page</label>
        <InputSelect id="pageSize" class="form-select form-select-sm" style="width: auto;" @bind-Value="PageSize">
            @foreach (var size in _pageSizeOptions)
            {
                <option value="@size">@size</option>
            }
        </InputSelect>
        <span class="text-muted small">(@_filteredProducts.Count total)</span>
    </div>
    <nav aria-label="Product pagination" class="d-flex align-items-center gap-2">
        <button class="btn btn-outline-secondary btn-sm" @onclick="PreviousPage" disabled="@(_currentPage == 1)">Previous</button>
        <span class="text-muted">Page @_currentPage of @_totalPages</span>
        <button class="btn btn-outline-secondary btn-sm" @onclick="NextPage" disabled="@(_currentPage == _totalPages)">Next</button>
    </nav>
</div>
