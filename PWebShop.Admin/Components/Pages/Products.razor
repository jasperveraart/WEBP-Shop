@page "/products"
@using Microsoft.AspNetCore.Authorization
@using PWebShop.Infrastructure.Identity
@attribute [Authorize(Roles = $"{ApplicationRoleNames.Administrator},{ApplicationRoleNames.Employee}")]

@rendermode InteractiveServer

<PageTitle>Products</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Products</h3>
        <p class="text-muted mb-0">Browse and manage all products, suppliers and categories.</p>
    </div>
    <button class="btn btn-primary" @onclick="AddProductAsync">Add product</button>
</div>

@if (!string.IsNullOrWhiteSpace(_statusMessage))
{
    <div class="alert alert-success" role="alert">@_statusMessage</div>
}
@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <div class="alert alert-danger" role="alert">@_errorMessage</div>
}

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-lg-4 col-md-6">
                <label class="form-label" for="productSearch">Search</label>
                <InputText id="productSearch"
                           class="form-control"
                           placeholder="Search by name or ID"
                           @bind-Value="SearchTerm"
                           @bind-Value:event="oninput" />
            </div>
            <div class="col-lg-4 col-md-6">
                <label class="form-label" for="categoryFilter">Category</label>
                <InputSelect id="categoryFilter"
                             class="form-select"
                             @bind-Value="SelectedCategoryId">
                    <option value="">All categories</option>
                    @foreach (var category in _categoryOptions)
                    {
                        <option value="@category.Id">@category.DisplayName</option>
                    }
                </InputSelect>
            </div>
            <div class="col-lg-4 col-md-6">
                <label class="form-label" for="supplierFilter">Supplier</label>
                <InputSelect id="supplierFilter"
                             class="form-select"
                             @bind-Value="SelectedSupplierId">
                    <option value="">All suppliers</option>
                    @foreach (var supplier in _supplierOptions)
                    {
                        <option value="@supplier.Id">@supplier.DisplayName</option>
                    }
                </InputSelect>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>ID</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (_filteredProducts.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No products found.</td>
                </tr>
            }
            else
            {
                @foreach (var product in _filteredProducts)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Id</td>
                        <td>@product.CategoryName</td>
                        <td>@product.SupplierName</td>
                        <td>
                            @{
                                var status = GetStatus(product);
                            }
                            <span class="badge @status.CssClass">@status.Text</span>
                            @if (product.IsListingOnly)
                            {
                                <span class="badge bg-info text-dark ms-1">Listing only</span>
                            }
                        </td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary"
                                    title="Edit product"
                                    aria-label="Edit product"
                                    @onclick="() => OnEditProduct(product)">
                                <span class="material-symbols-outlined" aria-hidden="true">edit</span>
                                <span class="visually-hidden">Edit</span>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
