@page "/availability-methods"
@using Microsoft.AspNetCore.Authorization
@using PWebShop.Infrastructure.Identity
@attribute [Authorize(Roles = $"{ApplicationRoleNames.Administrator},{ApplicationRoleNames.Employee}")]
@rendermode InteractiveServer

<PageTitle>Availability Methods</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Availability Methods</h3>
        <p class="text-muted mb-0">Manage shipping and pickup options.</p>
    </div>
    <a class="btn btn-primary" href="/availability-methods/new">
        <i class="bi bi-plus-lg"></i> New Method
    </a>
</div>

@if (!string.IsNullOrWhiteSpace(_statusMessage))
{
    <div class="alert alert-success" role="alert">@_statusMessage</div>
}
@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <div class="alert alert-danger" role="alert">@_errorMessage</div>
}

@if (_isLoading)
{
    <div class="text-muted">Loading availability methods...</div>
}
else if (_methods.Count == 0)
{
    <div class="alert alert-info" role="alert">No availability methods found.</div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Display Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var method in _methods)
                    {
                        <tr>
                            <td>@method.Name</td>
                            <td>@method.DisplayName</td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 250px;">
                                    @method.Description
                                </span>
                            </td>
                            <td>
                                @if (method.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="/availability-methods/@method.Id" class="btn btn-sm btn-outline-primary me-2">
                                    Edit
                                </a>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(method)">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<PWebShop.Admin.Components.Shared.DeleteConfirmationModal IsOpen="@_isDeleteModalOpen"
                                                          Title="Delete Availability Method"
                                                          Message="@($"Are you sure you want to delete '{_methodToDelete?.DisplayName}'?")"
                                                          OnConfirmed="HandleDeleteConfirmed"
                                                          OnCancelled="HandleDeleteCancelled" />
