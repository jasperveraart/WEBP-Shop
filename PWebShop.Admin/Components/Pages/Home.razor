@page "/"
@using System.Globalization
@using Microsoft.EntityFrameworkCore
@using PWebShop.Domain.Entities
@using PWebShop.Infrastructure

<PageTitle>Dashboard</PageTitle>

<div class="container-fluid dashboard">
    <div class="row g-4">
        <div class="col-12 col-lg-4">
            <article class="stat-card h-100 pending-users shadow-sm">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="d-flex align-items-center gap-2">
                        <span class="material-symbols-outlined stat-icon">group</span>
                        <div class="fw-semibold text-muted">Pending user requests</div>
                    </div>
                    <span class="badge rounded-pill bg-primary-soft text-primary fw-semibold">Review</span>
                </div>
                <div class="display-5 fw-bold text-primary mb-1">@PendingUserRequests</div>
                <p class="text-muted mb-0">Users awaiting approval</p>
            </article>
        </div>

        <div class="col-12 col-lg-4">
            <article class="stat-card h-100 pending-products shadow-sm">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="d-flex align-items-center gap-2">
                        <span class="material-symbols-outlined stat-icon">inventory_2</span>
                        <div class="fw-semibold text-muted">Pending products</div>
                    </div>
                    <span class="badge rounded-pill bg-success-soft text-success fw-semibold">Catalog</span>
                </div>
                <div class="display-5 fw-bold text-success mb-1">@PendingProducts</div>
                <p class="text-muted mb-0">Products pending review</p>
            </article>
        </div>

        <div class="col-12 col-lg-4">
            <article class="stat-card h-100 daily-orders shadow-sm">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="d-flex align-items-center gap-2">
                        <span class="material-symbols-outlined stat-icon">monitoring</span>
                        <div class="fw-semibold text-muted">Daily orders</div>
                    </div>
                    <span class="badge rounded-pill bg-warning-soft text-warning fw-semibold">Today</span>
                </div>
                <div class="display-5 fw-bold text-warning mb-1">@DailyOrdersTotal</div>
                <p class="text-muted mb-0">Orders placed today (placeholder)</p>
            </article>
        </div>
    </div>

    <div class="card chart-card shadow-sm mt-4">
        <div class="card-body p-4">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
                <div>
                    <div class="chart-title">Orders this week</div>
                    <div class="chart-subtitle">Placeholder data for quick insights</div>
                </div>
                <div class="d-flex align-items-center gap-2 text-primary fw-semibold">
                    <span class="legend-dot"></span>
                    Week overview
                </div>
            </div>
            <div class="chart-wrapper">
                <canvas id="@ChartCanvasId" aria-label="Orders per day of the week" role="img"></canvas>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject]
    private IJSRuntime JS { get; set; } = default!;

    [Inject]
    private IDbContextFactory<AppDbContext> DbContextFactory { get; set; } = default!;

    private const string ChartCanvasId = "weekly-orders-chart";

    private int PendingUserRequests { get; set; }
    private int PendingProducts { get; set; }
    private int DailyOrdersTotal { get; set; }

    private List<WeeklyOrderPoint> WeeklyOrders { get; set; } = [];

    protected override async Task OnInitializedAsync()
    {
        await using var dbContext = await DbContextFactory.CreateDbContextAsync();

        PendingUserRequests = await dbContext.Users.CountAsync(u => u.IsPendingApproval);
        PendingProducts = await dbContext.Products.CountAsync(p => p.Status == ProductStatus.PendingApproval);

        var today = DateTime.UtcNow.Date;
        DailyOrdersTotal = await dbContext.Orders.CountAsync(o => o.OrderDate.Date == today);

        WeeklyOrders = await LoadWeeklyOrdersAsync(dbContext, today);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        var labels = WeeklyOrders.Select(p => p.Day).ToArray();
        var data = WeeklyOrders.Select(p => p.Count).ToArray();

        await JS.InvokeVoidAsync("dashboardCharts.renderWeeklyOrdersChart", ChartCanvasId, labels, data);
    }

    private async Task<List<WeeklyOrderPoint>> LoadWeeklyOrdersAsync(AppDbContext dbContext, DateTime referenceDate)
    {
        var startOfWeek = referenceDate.AddDays(-GetOffsetFromMonday(referenceDate.DayOfWeek));
        var endOfWeek = startOfWeek.AddDays(6);

        var ordersThisWeek = await dbContext.Orders
            .Where(o => o.OrderDate.Date >= startOfWeek && o.OrderDate.Date <= endOfWeek)
            .ToListAsync();

        var ordersByDay = ordersThisWeek
            .GroupBy(o => o.OrderDate.Date)
            .ToDictionary(g => g.Key, g => g.Count());

        var weeklyOrders = Enumerable
            .Range(0, 7)
            .Select(offset => startOfWeek.AddDays(offset))
            .Select(day => new WeeklyOrderPoint(FormatDayLabel(day), ordersByDay.GetValueOrDefault(day)))
            .ToList();

        if (weeklyOrders.All(o => o.Count == 0))
        {
            weeklyOrders = new()
            {
                new(FormatDayLabel(startOfWeek), 8),
                new(FormatDayLabel(startOfWeek.AddDays(1)), 12),
                new(FormatDayLabel(startOfWeek.AddDays(2)), 5),
                new(FormatDayLabel(startOfWeek.AddDays(3)), 14),
                new(FormatDayLabel(startOfWeek.AddDays(4)), 10),
                new(FormatDayLabel(startOfWeek.AddDays(5)), 7),
                new(FormatDayLabel(startOfWeek.AddDays(6)), 9)
            };
        }

        return weeklyOrders;
    }

    private static int GetOffsetFromMonday(DayOfWeek dayOfWeek) => dayOfWeek switch
    {
        DayOfWeek.Monday => 0,
        DayOfWeek.Tuesday => 1,
        DayOfWeek.Wednesday => 2,
        DayOfWeek.Thursday => 3,
        DayOfWeek.Friday => 4,
        DayOfWeek.Saturday => 5,
        DayOfWeek.Sunday => 6,
        _ => 0
    };

    private static string FormatDayLabel(DateTime date) => date.ToString("ddd", CultureInfo.InvariantCulture);

    private record WeeklyOrderPoint(string Day, int Count);
}
