@page "/users"
@using PWebShop.Admin.Models
@using PWebShop.Infrastructure.Identity
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = $"{ApplicationRoleNames.Administrator},{ApplicationRoleNames.Employee}")]


<PageTitle>Users</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Users</h3>
        <p class="text-muted mb-0">Manage user accounts, access and status.</p>
    </div>
    <button class="btn btn-primary" @onclick="OpenCreateModal">Create new user</button>
</div>

@if (!string.IsNullOrWhiteSpace(_statusMessage))
{
    <div class="alert alert-success" role="alert">@_statusMessage</div>
}
@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <div class="alert alert-danger" role="alert">@_errorMessage</div>
}

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Display name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (_users.Count == 0)
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No users found.</td>
                </tr>
            }
            else
            {
                @foreach (var user in _users)
                {
                    <tr>
                        <td>@user.DisplayName</td>
                        <td>@user.Email</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                <span class="badge text-bg-secondary me-1">@role</span>
                            }
                        </td>
                        <td>
                            @if (user.IsPendingApproval)
                            {
                                <span class="badge text-bg-warning text-dark">Pending approval</span>
                            }
                            else if (user.IsActive)
                            {
                                <span class="badge text-bg-success">Active</span>
                            }
                            else if (user.IsBlocked)
                            {
                                <span class="badge text-bg-danger">Blocked</span>
                            }
                            else
                            {
                                <span class="badge text-bg-secondary">Disabled</span>
                            }
                        </td>
                        <td class="text-end">
                            @if (user.IsPendingApproval)
                            {
                                <button class="btn btn-sm btn-outline-success me-2" title="Approve user" @onclick="() => ApproveUserAsync(user.Id)">✅</button>
                                <button class="btn btn-sm btn-outline-danger" title="Decline user" @onclick="() => DeclineUserAsync(user.Id)">❌</button>
                            }
                            else
                            {
                                <span class="d-inline-block" title="@GetEditTooltip(user)">
                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => OpenEditModal(user.Id)" disabled="@(!CanEditUser(user))">Edit</button>
                                </span>
                                @if (_isAdmin && !user.IsSelf)
                                {
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteUserAsync(user.Id)">Delete</button>
                                }
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<UserEditModal IsOpen="@_isModalOpen"
               IsEditMode="@_isEditMode"
               Model="@_editModel"
               OnValidSubmit="HandleModalSubmit"
               OnCancel="CloseModal"
               AvailableRoles="@_availableRolesForModal"
               DisableAdminEmployeeSelection="@_isEmployee"
               DisableRoleSelection="@_disableRoleSelection" />
